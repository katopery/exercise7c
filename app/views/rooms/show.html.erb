<% @entries.each do |entry| %>
  <% if entry.user != current_user %>
    <h1><%= entry.user.name %>さんとのチャット</h1>
  <% end %>
<% end %>

<% if @messages.present? %>
  <% @messages.each do |message| %>
    <div class="chat-box, offset-md-3">
      <%= message.body %>
    </div>
  <% end %>
<% end %>

<%= form_for @message do |f| %>
  <%= f.text_field :body, class:"form-text-field" %>
  <%= f.hidden_field :room_id, value: @room.id %>
<% end %>